@model projet_dotnet.Models.Pfe_Etudiant

@{
    ViewData["Title"] = "Edit";
}

<div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3>Modifier Pfe_Etudiant</h3>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ID" />
                        <div class="col-md-12">
                            <label asp-for="PfeId" class="control-label"></label>
                            <select asp-for="PfeId" class="form-control" asp-items="ViewBag.PfeId"></select>
                            <span asp-validation-for="PfeId" class="text-danger"></span>
                        </div>


                        <div class="col-md-12">
                            <label asp-for="EtudiantId" class="control-label"></label>
                            <select asp-for="EtudiantId" class="form-control" asp-items="ViewBag.EtudiantId"></select>
                            <span asp-validation-for="EtudiantId" class="text-danger"></span>
                        </div>




                        <div class="form-button mt-3">
                            <input type="submit" value="Save" class="btn btn-warning" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <button type="button" class="btn btn-outline-warning"><a asp-action="Index">Back To List</a></button>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
