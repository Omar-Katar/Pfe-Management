@model projet_dotnet.Models.Etudiant

@{
    ViewData["Title"] = "Create";
}

<div class="form-body">
    <div class="row">
        <div class="form-holder">
            <div class="form-content">
                <div class="form-items">
                    <h3>Ajouter Etudiant</h3>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="col-md-12">
                            <label asp-for="Nom" class="control-label"></label>
                            <input asp-for="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>


                       <div class="col-md-12">
                        <label asp-for="Prenom" class="control-label"></label>
                        <input asp-for="Prenom" class="form-control" />
                        <span asp-validation-for="Prenom" class="text-danger"></span>
                       </div>
                       <div class="col-md-12">
                        <label asp-for="DateNaiss" class="control-label"></label>
                        <input asp-for="DateNaiss" class="form-control" />
                        <span asp-validation-for="DateNaiss" class="text-danger"></span>
                       </div>

                        <div class="form-button mt-3">
                            <input type="submit" value="Create" class="btn btn-warning" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <button type="button" class="btn btn-outline-warning"><a asp-action="Index">Back To List</a></button>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
